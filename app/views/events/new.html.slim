div.row
  .col-sm-6.col-sm-offset-3
    .card
      .card-header
        h3.mb-0.my-2
      .card-body
        / = errors_for(@event)
        = form_for(@event, url: events_path(from: 'first_form'),
                html: {method: :pokst, class: 'form'}) do |f|
          .form-group
            = f.label 'Signup Title'
            = f.text_field :title, class: 'form-control'
          .form-group
            = f.label 'Type of Event'
            = f.text_field :category, class: 'form-control'
          .form-group
            = f.label 'Welcome message/Ask'
            = f.text_area :welcome_message, class: 'form-control'
          .form-group
            = f.label 'Attach a File'
            = f.file_field :file, class: 'form-control'
          .form-group
            = f.label 'Feature Image'
            = f.file_field :image, class: 'form-control'

